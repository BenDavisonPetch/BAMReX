# ------------------  INPUTS TO MAIN PROGRAM  -------------------
max_step = 10000

## PROBLEM INPUT
stop_time = 1

prob.adiabatic  = 1.4
init.lambda = 5
init.density_bg = 1
init.u_bg = 1
init.v_bg = 1
init.w_bg = 0
init.pressure_bg = 1
init.x_c = 0
init.y_c = 0

geometry.is_periodic =  1  1  1
geometry.coord_sys   =  0       # 0 => cart
geometry.prob_lo     =  -5.0  -5.0  -5.0 
geometry.prob_hi     =  5.0  5.0  5.0

# RESOLUTION
amr.n_cell         =  32 32 32

# TIME STEP CONTROL
adv.cfl            = 0.9   # cfl number for hyperbolic system

## NUMERICAL METHOD SETTINGS
adv.num_method = muscl_hancock

# VERBOSITY
adv.v              = 0       # verbosity in Adv
amr.v              = 1       # verbosity in Amr
#amr.grid_log         = grdlog  # name of grid logging file

# REFINEMENT / REGRIDDING
amr.max_level       = 0       # maximum level number allowed
amr.ref_ratio       = 2 2 2 2 # refinement ratio
amr.regrid_int      = 2       # how often to regrid
amr.blocking_factor = 8       # block factor in grid generation
amr.max_grid_size   = 128

# CHECKPOINT FILES
amr.checkpoint_files_output = 0     # 0 will disable checkpoint files
amr.check_file              = chk   # root name of checkpoint file
amr.check_int               = 10    # number of timesteps between checkpoints

# PLOTFILES
amr.plot_files_output = 1      # 0 will disable plot files
amr.plot_file         = plt    # root name of plot file
amr.plot_int          = 10000 # number of timesteps between plot files
amr.plot_file = output/MHM/mov2d/0032/plt

# TRACER PARTICLES
adv.do_tracers = 0

# ERROR TAGGING
tagging.phierr =  1.01  1.1   1.5
tagging.max_phierr_lev = 10
