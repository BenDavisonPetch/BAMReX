limiting.mom     = energy energy energy
limiting.energy  = energy

# RESOLUTION
amr.n_cell         =  800 800 800

# TIME STEP CONTROL
adv.cfl            = 0.45   # cfl number for hyperbolic system

## NUMERICAL METHOD SETTINGS
adv.num_method = imex
